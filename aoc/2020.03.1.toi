lines = inputLines()
grid = array()

i = 0
while i < len(lines) {
    set(grid, i, split([lines]i, ""))
    i = i + 1
}

lineCount = len(lines)
lineLength = len([grid]0)
y = 1
x = 3
treeCount = 0
while y < lineCount {
    char = [get(grid, y)]x
    if char == "#" {
        treeCount = treeCount + 1
    }

    y = y + 1
    x = x + 3
    if x >= lineLength {
        x = x - lineLength
    }
}

println(treeCount)
